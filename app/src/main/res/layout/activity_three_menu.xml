<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/head_page"
        android:drawableRight="@android:drawable/star_off"
        android:text="北京烤鸭" />

    <ImageView
        android:id="@+id/dish_Img"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/green_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="鲁菜"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/dish_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="菜品名称"
            android:textSize="40sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="菜品简介："
        android:textColor="#000"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/dish_brief"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="鲁菜，是起源于山东的齐鲁风味，是中国传统四大菜系（也是八大菜系）中唯一的自发型菜系（相对于淮扬、川、粤等影响型菜系而言） [1]  ，是历史最悠久、技法最丰富、难度最高、最见功力 [2-3]  的菜系。"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="食材清单"
        android:textColor="#000"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/dish_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="鲁菜，是起源于山东的齐鲁风味，是中国传统四大菜系（也是八大菜系）中唯一的自发型菜系（相对于淮扬、川、粤等影响型菜系而言） [1]  ，是历史最悠久、技法最丰富、难度最高、最见功力 [2-3]  的菜系。"
        android:textSize="30dp" />

    <ListView
        android:id="@+id/dish_step"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"></ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/comment" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评论"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_like"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/dislike" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="喜欢"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_dislike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_dislike"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/dislike" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="不喜欢"
                android:textSize="30sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>