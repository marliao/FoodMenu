<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text1_tittle"
            android:text="步骤1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:padding="10dp"
            android:textColor="#000"
           />
        <TextView
            android:text="鲁菜，是起源于山东的齐鲁风味是起源于山东的齐鲁风味"
            android:id="@+id/text2_tittle"
            android:layout_below="@id/text1_tittle"
            android:layout_width="600dp"
            android:layout_height="150dp"
            android:textSize="40sp"
            android:padding="5dp"
            android:singleLine="true"
            />
        <ImageView
            android:id="@+id/step_Img"
            android:layout_width="200dp"
            android:background="#000"
            android:layout_height="160dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
        <TextView
            android:textSize="30sp"
            android:id="@+id/dish_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/text2_tittle"
            android:padding="2dp"
            android:text="10 min" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000"
            android:layout_below="@id/text2_tittle"></View>

    </RelativeLayout>
</LinearLayout>
